{
  "name": "tippy-like-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate estilo Tippy.js con Rollup: ESM/CJS/UMD, CSS separado y variante headless",
  "type": "module",
  "main": "dist/tippy.cjs.js",
  "module": "dist/tippy.esm.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/tippy.esm.js",
      "require": "./dist/tippy.cjs.js",
      "default": "./dist/tippy.esm.js"
    },
    "./react": {
      "require": "./react/dist/index.cjs.js",
      "import": "./react/dist/index.esm.js",
      "default": "./react/dist/index.esm.js"
    },
    "./headless": {
      "types": "./headless/dist/index.d.ts",
      "import": "./headless/dist/tippy-headless.esm.js",
      "require": "./headless/dist/tippy-headless.cjs.js",
      "default": "./headless/dist/tippy-headless.esm.js"
    },
    "./style.css": "./dist/tippy.css",
    "./umd": "./dist/tippy.umd.js",
    "./umd-bundle": "./dist/tippy-bundle.umd.js"
  },
  "files": [
    "dist",
    "headless/dist"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "scripts": {
    "dev:visual": "cross-env NODE_ENV=dev rollup -c",
    "test:visual": "cross-env NODE_ENV=test rollup -c",
    "dev:react": "cross-env NODE_ENV=devReact rollup -c",
    "test:react": "cross-env NODE_ENV=testReact rollup -c",
    "test:bundle": "cross-env NODE_ENV=test rollup -c",
    "build": "rimraf dist headless/dist && cross-env NODE_ENV=production rollup -c",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sass": "^1.2.10",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.9",
    "@popperjs/core": "^2.11.8"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
